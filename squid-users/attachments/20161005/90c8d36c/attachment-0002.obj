# Skeleton Squid configuration for testing


auth_param basic program /usr/lib64/squid/basic_ldap_auth -b "DC=*****,DC=******,DC=vic,DC=edu,DC=au" -w "*****" -D "CN=****,DC=vic,DC=edu,DC=au"
auth_param basic children 5
auth_param basic credentialsttl 2 hours


acl localnet src 10.0.0.0/8
acl require_auth proxy_auth REQUIRED


http_access allow localhost
http_access allow to_localhost
http_access allow localnet require_auth
http_access deny all

http_reply_access deny all

http_port 8080



#cache_dir ufs /var/spool/squid 100 16 256

cache_peer ****** parent 8080 0 login=****:******* default no-query no-digest no-netdb-exchange connect-timeout=1 connect-fail-limit=2 name=ISP1

cache_peer_access allow all

coredump_dir /var/spool/squid


#
# Add any of your own refresh_pattern entries above these.
#
refresh_pattern ^ftp:           1440    20%     10080
refresh_pattern ^gopher:        1440    0%      1440
refresh_pattern -i (/cgi-bin/|\?) 0     0%      0
refresh_pattern .               0       20%     4320

debug_options 28,5
